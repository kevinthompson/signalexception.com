source :rubygems

# Server
gem 'unicorn'

# Middleman
gem 'middleman'
gem 'middleman-blog'
gem 'middleman-smusher'
gem 'middleman-livereload'

# Performance
gem 'libv8'
gem 'therubyracer'
gem 'oj'

# Utilities
gem 'builder'
gem 'coffee-filter'
gem 'hashie'
gem 'redcarpet'

# Middleware
gem 'pygmentize', git: 'git://github.com/zimbatm/pygmentize.git', branch: 'pygments-1.5'
gem 'albino'
gem 'rack-rewrite'
gem 'rack-syntax-highlighter'
gem 'rack-google_analytics'

# Testing
group :test do
  gem 'rspec'
end