//
// Syntax Highlighting Styles
// ----------------------------------------

$syntax-bg: #fefefe;
$syntax-border: darken(#faf9f6, 10);

$syntax-scroll-bg: rgba(white, 0.15);
$syntax-scroll-thumb: rgba(white, 0.2);

<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

// Element Styles
// --------------------

// Inline Code
p, li {
  code {
    font-family: $mono;
    display: inline-block;
    white-space: nowrap;
    background: $syntax-bg;
    font-weight: normal;
    font-size: 14px;
    line-height: 1.5em;
    color: #073642;
    border: 1px solid $syntax-border;
    padding: 0 0.4em;
    margin: 0 0.2em;
    top: -1px;
    position: relative;
  }
  pre code {
    font-size: 1em;
    background: none;
    border: none;
  }
}

// Syntax Hilighting
pre.highlight {
  background: $syntax-bg;
  border: 1px solid $syntax-border;
  display: block;
  font-family: $mono;
  font-size: 14px;
  overflow-y: hidden;
  overflow-x: auto;
  margin-bottom: 2em;
  padding: 0.8em;
  line-height: 1.45em;

  &::-webkit-scrollbar {
    height: 0.5em;
    background: $syntax-scroll-bg;
  }

  &::-webkit-scrollbar-thumb:horizontal {
    background: $syntax-scroll-thumb;
    -webkit-border-radius: 4px;
    border-radius: 4px;
  }
}
