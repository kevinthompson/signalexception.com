//
// Syntax Highlighting Styles
// ----------------------------------------

$syntax-bg: #fcfcfc;
$syntax-border: darken(#fcfcfc, 2);

<%= Rouge::Themes::Github.render(scope: '.highlight') %>

// Element Styles
// --------------------

// Inline Code
p, li {
  code {
    font-family: $mono;
    display: inline-block;
    white-space: nowrap;
    background: $syntax-bg;
    font-weight: normal;
    font-size: 14px;
    line-height: 1.5em;
    color: #073642;
    border: 1px solid $syntax-border;
    padding: 0 0.4em;
    margin: 0 0.2em;
    top: -1px;
    position: relative;
  }
  pre code {
    font-size: 1em;
    background: none;
    border: none;
  }
}

// Syntax Hilighting
pre.highlight {
  background: $syntax-bg;
  border: 1px solid $syntax-border;
  display: block;
  font-family: $mono;
  font-size: 14px;
  overflow-y: hidden;
  overflow-x: auto;
  margin-bottom: 2em;
  padding: 0.8em;
  line-height: 1.45em;

  * {
    font-weight: normal !important;
  }
}
